<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Golfnow.LoginPage">
        <AbsoluteLayout>
            <Image Source="bg-light.png" Aspect="AspectFill" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"/>
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                <Image Source="logo.png" Margin="0,0,0,50"/>
                <StackLayout Spacing="16">
                    <StackLayout>
                        <Label Text="Username"/>
                        <Entry BackgroundColor="#20000019" TextColor="Black" Text="admin" HeightRequest="38" x:Name="UsernameField"/>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Password"/>
                        <Entry BackgroundColor="#20000019" Text="adminadmin" IsPassword="True" x:Name="PasswordField"/>
                    </StackLayout>
                </StackLayout>
                <Button Margin="0,45,0,0" Text="LOG IN" BackgroundColor="#7504040F" TextColor="White" WidthRequest="330" HeightRequest="47" FontSize="20" CornerRadius="9" Clicked="OnLogIn"/>
            </StackLayout>
        </AbsoluteLayout>
</ContentPage>
